<div class="container">
  <h2>Present or Edit a Skill</h2>
  <%= simple_form_for ([@user, @skill]), html: { class: "form-group"} do |f| %>
    <% if @skill.errors.any? %>
      <div id=“error_explanation”>
        <ul>
        <% @skill.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-inputs">
      <%= f.input :name, input_html: { placeholder: "Ex. photography, coding, math...", class: 'form-control' } %>
      <%= f.input :description, input_html: { placeholder: "Describe the skill...", class: 'form-control' } %>
      <%= f.input :photo, as: :attachinary %>
    </div>

    <div class="form-actions">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
  <%= link_to 'Back', skills_path %>

  <div class="tabs">
  <a href="#" class="tab active"> Ready for more? </a>
  <a href="#" class="tab"><%= link_to 'Well, click here to browse all skills.', skills_path %></a>
</div>
</div>
