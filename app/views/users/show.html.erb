<%= render "shared/profile_banner" %>

<div class="container">
  <div class="row text-center">
    <h1>Skills</h1>
  </div>

  <% if @user.resume? %>
    <div class="resume-container">
      <%= @user.resume %>
    </div>
  <% end %>


  <div class="cards-container">
    <div class="row text-center">
      <% current_user.skills.each do |skill| %>
      <div class="col-xs-12">
        <%= render "shared/card", skill: skill %>
      </div>
      <% end %>
    </div>

  </div>
</div>


