<div class="container">
  <h2>Present a new skill</h2>
  <%= simple_form_for ([@user, @skill]), html: { class: "form-group"} do |f| %>
    <% if @skill.errors.any? %>
      <div id=“error_explanation”>
        <ul>
        <% @skill.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-inputs">
      <%= f.input :name, input_html: { placeholder: "photography, coding, math...", class: 'form-control' } %>
      <%= f.input :description, input_html: { placeholder: "describe the skill...", class: 'form-control' } %>
      <%= f.input :photo, as: :attachinary %>
    </div>

    <div class="form-actions">
      <%= f.submit class: "btn btn-success" %>
    </div>
  <% end %>
  <%= link_to 'Back', skills_path %>
</div>
