<h1>Skills#show</h1>

<ul>
<% @skills.each do |skill| %>
  <li><%= skill[:name]%> | <%= skill[:description] %> </li>
<% end %>
</ul>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    const coord = <%= raw @skill_coordinates.to_json %>;
    alert('Skill coordinates are ' + coord.lat + ', ' + coord.lng);
  <% end %>
<% end %>

