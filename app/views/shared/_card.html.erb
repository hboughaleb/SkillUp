<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cl_image_path skill.photo.path, height: 300, width: 400, :crop=>"fill" %>);">

  <div class="card-description">
    <h2><%= skill.name %></h2>
    <p><%= skill.description %></p>
  </div>

  <% if current_user.facebook_picture_url? %>
    <% avatar_url = skill.user.facebook_picture_url || "http://placehold.it/30x30" %>
  <% else %>
    <%= avatar_url = cl_image_tag skill.user.photo.path , height: 30, width: 30, :crop=>"fill" %>
  <% end %>
  <%= image_tag avatar_url, class: "card-user" %>
  <%= link_to "", skill_path(skill), class: "card-link" %>
</div>
